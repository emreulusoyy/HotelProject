@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Adı</th>
        <th>Referans Ünvanı</th>
        <th>Referans Görseli</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.TestimonialID</th>
            <td>@x.Name</td>
            <td>@x.Title</td>
            <td><a href="/Testimonial/DeleteTestimonial/@x.TestimonialID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Staff/UpdateTestimonial/@x.TestimonialID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Testimonial/AddTestimonial/" class="btn btn-info">Yeni Referans Girişi</a>



