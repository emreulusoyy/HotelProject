@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h2>Hizmet Güncelleme Sayfası</h2>
<form method="post">
    <label>Hizmet İconu</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <input type="hidden" asp-for="ServiceID" class="form-control" />
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br />
    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>

    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>

    <br />

    <button class="btn btn-primary">Hizmeti Güncelle</button>
</form>
