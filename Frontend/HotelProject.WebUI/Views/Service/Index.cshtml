@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Başlığı</th>
        <th>Hizmet Aççıklaması</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.ServiceID</th>
            <td>@x.Title</td>
            <td>@x.Description</td>
            <td><a href="/Service/DeleteService/@x.ServiceID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@x.ServiceID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Service/AddService/" class="btn btn-info">Yeni Hizmet Girişi</a>

