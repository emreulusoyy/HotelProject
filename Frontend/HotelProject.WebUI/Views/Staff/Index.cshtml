@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
       
    </tr>
    @foreach(var x in Model)
    {
        <tr>
            <th>@x.StaffID</th>
            <td>@x.Name</td>
            <td>@x.Title</td>
            <td><a href="/Staff/DeleteStaff/@x.StaffID"class="btn btn-danger">Sil</a></td>
            <td><a href="/Staff/UpdateStaff/@x.StaffID"class="btn btn-success">Güncelle</a></td>
            <td><a href="#"class="btn btn-dark">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Staff/AddStaff/" class="btn btn-info">Yeni Personel Girişi</a>

